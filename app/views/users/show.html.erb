<!-- app/views/users/show.html.erb -->
<div class="max-w-4xl mx-auto p-8 bg-gray-100 dark:bg-gray-900 min-h-screen">
  <div id="profileHeader" class="text-center mb-12 opacity-0 transform translate-y-4 transition-all duration-700">
    <div class="w-32 h-32 rounded-full bg-indigo-600 dark:bg-indigo-500 flex items-center justify-center mx-auto shadow-lg mb-4">
      <span class="text-4xl font-bold text-white"><%= @user.first_name[0] %><%= @user.last_name[0] %></span>
    </div>
    <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white mb-2"><%= @user.full_name %></h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-4"><%= @user.email %></p>
    <% if current_user == @user %>
      <%= link_to edit_user_registration_path, class: "inline-flex items-center px-6 py-3 bg-indigo-600 text-white text-base font-medium rounded-full hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 transition-all duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
        </svg>
        Edit Profile
      <% end %>
    <% end %>
  </div>

  <div id="profileStats" class="mb-12 opacity-0 transform translate-y-4 transition-all duration-700">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg text-center mb-6">
      <h3 class="text-xl text-gray-700 dark:text-gray-300 mb-2">
        Overall <%= @total_balance >= 0 ? 'You Are Owed' : 'You Owe' %>
      </h3>
      <p class="text-4xl font-bold <%= @total_balance >= 0 ? 'text-green-500' : 'text-red-500' %> animate-number">
        <%= number_to_currency(@total_balance.abs) %>
      </p>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">across all groups</p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg text-center">
        <h3 class="text-lg text-gray-700 dark:text-gray-300 mb-2">You're part of</h3>
        <p class="text-3xl font-bold text-indigo-600 dark:text-indigo-400"><%= @groups.count %></p>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">Active Groups</p>
      </div>
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg text-center">
        <h3 class="text-lg text-gray-700 dark:text-gray-300 mb-2">Total Expenses</h3>
        <p class="text-3xl font-bold text-indigo-600 dark:text-indigo-400 animate-number"><%= number_to_currency(@user.expenses.sum(:amount)) %></p>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">You've added</p>
      </div>
    </div>
  </div>

  <div id="profileContent" class="grid grid-cols-1 lg:grid-cols-2 gap-8 opacity-0 transform translate-y-4 transition-all duration-700">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">Your Groups</h2>
      <% if @groups.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <% @groups.each do |group| %>
            <%= link_to group_path(group), class: "block bg-gray-100 dark:bg-gray-900 p-4 rounded-lg shadow-md transition-transform duration-300 hover:shadow-xl hover:transform hover:-translate-y-2" do %>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2"><%= group.name %>
                <svg class="w-5 h-5 inline-block text-indigo-600 dark:text-indigo-400 ml-2 transition-transform duration-300 transform group-hover:scale-125" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-2"><%= pluralize(group.users.count, 'member') %></p>
              <% balance = @user.balance_in_group(group) %>
              <p class="text-lg font-bold <%= balance >= 0 ? 'text-green-500' : 'text-red-500' %>">
                <%= balance >= 0 ? 'You are owed' : 'You owe' %> <%= number_to_currency(balance.abs) %>
              </p>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-center text-gray-500 dark:text-gray-400">You're not part of any groups yet.</p>
      <% end %>
    </div>

    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">Recent Expenses</h2>
      <div class="max-h-96 overflow-y-auto">
        <% if @recent_expenses.any? %>
          <% @recent_expenses.each do |expense| %>
            <%= link_to group_expense_path(expense.group, expense), class: "block py-4 border-b border-gray-200 dark:border-gray-700 transition-transform duration-300 hover:bg-gray-100 dark:hover:bg-gray-900 hover:shadow-md transform hover:-translate-y-1" do %>
              <div class="flex justify-between items-center">
                <div>
                  <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= expense.description %>
                    <svg class="w-5 h-5 inline-block text-indigo-600 dark:text-indigo-400 ml-2 transition-transform duration-300 transform group-hover:scale-125" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </p>
                  <p class="text-sm text-gray-500 dark:text-gray-400"><%= expense.group.name %> â€¢ <%= expense.date.strftime("%b %d, %Y") %></p>
                </div>
                <p class="text-lg font-bold text-indigo-600 dark:text-indigo-400"><%= number_to_currency(expense.amount) %></p>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-center text-gray-500 dark:text-gray-400">No recent expenses to show.</p>
        <% end %>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg lg:col-span-2">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">Expense Breakdown</h2>
      <% if @expense_categories.any? %>
        <div id="expenseCategoriesChart" class="h-80"></div>
      <% else %>
        <p class="text-center text-gray-500 dark:text-gray-400">No expense data available yet.</p>
      <% end %>
    </div>
  </div>
</div>

<style>
    @media (max-width: 640px) {
        .stat-card, .content-card {
            padding: 1rem;
        }
        .stat-card h3 {
            font-size: 0.875rem;
        }
        .stat-card p:first-of-type, .content-card h2 {
            font-size: 1.5rem;
        }
        .stat-card p:last-of-type, .content-card p {
            font-size: 0.75rem;
        }
        .group-list {
            grid-template-columns: 1fr;
        }
    }

    .group-card, .expense-item, .stat-card, .content-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .group-card:hover, .expense-item:hover, .stat-card:hover, .content-card:hover, .edit-profile-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    .link-icon {
        transition: transform 0.3s ease, color 0.3s ease;
    }

    .group-card:hover .link-icon, .expense-item:hover .link-icon {
        transform: scale(1.2);
        color: #4F46E5;
    }

    .animate-in {
        animation: fadeInUp 0.5s ease-out forwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    function initializeUserProfile() {
        // Animate elements
        const elements = [
            document.getElementById('profileHeader'),
            document.getElementById('profileStats'),
            document.getElementById('profileContent')
        ];

        elements.forEach((el, index) => {
            setTimeout(() => {
                el.classList.add('animate-in');
            }, index * 200);
        });

        // Animate numbers
        document.querySelectorAll('.animate-number').forEach(el => {
            const finalValue = parseFloat(el.innerText.replace(/[^0-9.-]+/g,""));
            let startValue = 0;
            const duration = 1000;
            const startTime = performance.now();

            function updateNumber(currentTime) {
                const elapsedTime = currentTime - startTime;
                if (elapsedTime < duration) {
                    const progress = elapsedTime / duration;
                    const currentValue = startValue + progress * (finalValue - startValue);
                    el.innerText = '$' + currentValue.toFixed(2);
                    requestAnimationFrame(updateNumber);
                } else {
                    el.innerText = '$' + finalValue.toFixed(2);
                }
            }

            requestAnimationFrame(updateNumber);
        });

        // Create expense categories chart
        const chartElement = document.getElementById('expenseCategoriesChart');
        if (chartElement) {
            const ctx = chartElement.getContext('2d');
            new Chart(ctx, {
                // Define your chart here
            });
        }
    }

    // Run on initial page load
    document.addEventListener('DOMContentLoaded', initializeUserProfile);

    // Run on Turbo Drive page load
    document.addEventListener('turbo:load', initializeUserProfile);

    // Run on Turbo Drive render
    document.addEventListener('turbo:render', initializeUserProfile);
</script>
