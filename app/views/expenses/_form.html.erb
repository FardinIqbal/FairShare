<!-- app/views/expenses/_form.html.erb -->
<%= form_with(model: [@group, @expense], local: true) do |form| %>
  <% if @expense.errors.any? %>
    <div>
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul>
        <% @expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01 %>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.select :category, Expense::CATEGORIES, prompt: "Select a category" %>
  </div>

  <%= form.submit %>
<% end %>