<!-- app/views/expenses/new_with_group_selection.html.erb -->
<div id="new-expense-container" class="bg-gradient-to-b from-indigo-50 to-white min-h-screen p-4 sm:p-6 md:p-8">
  <div class="max-w-3xl mx-auto">
    <h1 id="page-title" class="text-3xl sm:text-4xl font-extrabold text-indigo-900 mb-6 opacity-0 transform -translate-y-4 transition-all duration-500 ease-out text-center">
      Select a Group for Your New Expense
    </h1>

    <p id="page-description" class="text-lg text-gray-600 mb-8 opacity-0 transform -translate-y-4 transition-all duration-500 ease-out delay-100 text-center">
      Choose the group where you want to add your new expense. This helps keep your expenses organized and makes it easier to split costs with the right people.
    </p>

    <div id="group-list" class="grid gap-6 md:grid-cols-2 opacity-0 transform translate-y-4 transition-all duration-500 ease-out delay-200">
      <% @groups.each do |group| %>
        <%= link_to new_group_expense_path(group), class: "group-card block text-decoration-none transition-all duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden h-full">
            <div class="p-6">
              <h2 class="text-xl font-semibold text-indigo-700 mb-2 group-hover:text-indigo-500 transition-colors duration-300"><%= group.name %></h2>
              <p class="text-gray-600 mb-4"><%= group.description %></p>
              <div class="flex justify-between items-center text-sm text-gray-500">
                <span><%= pluralize(group.users.count, 'member') %></span>
                <span><%= pluralize(group.expenses.count, 'expense') %></span>
              </div>
            </div>
            <div class="bg-indigo-50 px-6 py-3">
              <div class="flex justify-between items-center">
                <span class="text-indigo-700 font-medium">Total Expenses:</span>
                <span class="text-indigo-900 font-bold"><%= number_to_currency(group.expenses.sum(:amount)) %></span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div id="no-groups" class="text-center mt-8 bg-yellow-50 border border-yellow-200 rounded-lg p-6 opacity-0 transform translate-y-4 transition-all duration-500 ease-out delay-300" style="display: none;">
      <h2 class="text-xl font-semibold text-yellow-800 mb-2">No Groups Found</h2>
      <p class="text-yellow-700 mb-4">You haven't created or joined any groups yet. Create a group to start tracking expenses together!</p>
      <%= link_to 'Create a New Group', new_group_path, class: "inline-block bg-yellow-500 text-white font-bold py-2 px-4 rounded hover:bg-yellow-600 transition-colors duration-300" %>
    </div>

    <div id="back-link" class="mt-8 text-center opacity-0 transform translate-y-4 transition-all duration-500 ease-out delay-400">
      <%= link_to dashboard_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 transition-colors duration-300" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
        Back to Dashboard
      <% end %>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const pageTitle = document.getElementById('page-title');
        const pageDescription = document.getElementById('page-description');
        const groupList = document.getElementById('group-list');
        const noGroups = document.getElementById('no-groups');
        const backLink = document.getElementById('back-link');

        // Animate elements
        [pageTitle, pageDescription, groupList, backLink].forEach((el, index) => {
            setTimeout(() => {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }, 100 * (index + 1));
        });

        // Show "No Groups" message if there are no groups
        if (document.querySelectorAll('.group-card').length === 0) {
            groupList.style.display = 'none';
            noGroups.style.display = 'block';
            setTimeout(() => {
                noGroups.style.opacity = '1';
                noGroups.style.transform = 'translateY(0)';
            }, 300);
        }

        // Add hover effect to group cards
        const groupCards = document.querySelectorAll('.group-card');
        groupCards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.querySelector('h2').style.transform = 'translateX(5px)';
            });
            card.addEventListener('mouseleave', () => {
                card.querySelector('h2').style.transform = 'translateX(0)';
            });
        });
    });
</script>