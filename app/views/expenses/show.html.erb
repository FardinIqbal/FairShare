<div id="expense-show-container" class="min-h-screen bg-gray-50 dark:bg-gray-900 flex flex-col items-center justify-center p-6">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-lg">
    <div class="p-6">
      <h1 id="expense-title" class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4 text-center">
        <%= @expense.description %>
      </h1>

      <div id="expense-details" class="grid grid-cols-2 gap-4 mb-6">
        <div class="flex flex-col items-center">
          <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Amount</dt>
          <dd class="text-lg font-bold text-indigo-700 dark:text-indigo-300"><%= number_to_currency(@expense.amount) %></dd>
        </div>
        <div class="flex flex-col items-center">
          <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Paid by</dt>
          <dd class="text-lg font-bold text-gray-800 dark:text-gray-100"><%= @expense.user.full_name %></dd>
        </div>
        <div class="flex flex-col items-center">
          <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Date</dt>
          <dd class="text-lg font-bold text-gray-800 dark:text-gray-100"><%= @expense.date.strftime("%B %d, %Y") %></dd>
        </div>
        <div class="flex flex-col items-center">
          <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Category</dt>
          <dd class="text-lg font-bold text-gray-800 dark:text-gray-100"><%= @expense.category %></dd>
        </div>
      </div>

      <div id="action-buttons" class="flex justify-around mt-6 space-x-2">
        <a href="#" id="edit-button" aria-label="Edit expense" class="w-full inline-block bg-indigo-600 text-white font-medium py-2 rounded-lg shadow-md text-center hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition duration-300 ease-in-out">Edit</a>

        <button type="button" id="delete-button" aria-label="Delete expense" data-confirm="Are you sure you want to delete this expense?" class="w-full inline-block bg-red-600 text-white font-medium py-2 rounded-lg shadow-md text-center hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition duration-300 ease-in-out">
          Delete
        </button>

        <a href="#" id="back-button" aria-label="Go back to expenses list" class="w-full inline-block text-indigo-600 border-2 border-indigo-600 font-medium py-2 rounded-lg shadow-md text-center hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition duration-300 ease-in-out">Back</a>
      </div>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const editButton = document.getElementById('edit-button');
        const deleteButton = document.getElementById('delete-button');
        const backButton = document.getElementById('back-button');

        if (editButton) {
            addHoverEffect(editButton);
        }

        if (deleteButton) {
            addHoverEffect(deleteButton);
            // Add your delete confirmation logic here if needed
        }

        if (backButton) {
            addHoverEffect(backButton);
        }

        function addHoverEffect(button) {
            button.addEventListener('mouseover', function() {
                this.style.transform = 'scale(1.05)';
            });

            button.addEventListener('mouseout', function() {
                this.style.transform = 'scale(1)';
            });
        }
    });
</script>