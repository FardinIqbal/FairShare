<div class="login-container">
  <div class="login-card">
    <div class="login-content">
      <div class="form-section">
        <div class="login-header animate-fade-in-up">
          <h2>Welcome Back</h2>
          <p>Sign in to your FairShare account</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
          <div class="form-group animate-fade-in-up" style="animation-delay: 0.2s;">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "Your email address" %>
          </div>

          <div class="form-group animate-fade-in-up" style="animation-delay: 0.3s;">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password", required: true, placeholder: "Your password" %>
          </div>

          <div class="form-group remember-me animate-fade-in-up" style="animation-delay: 0.4s;">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>

          <div class="form-actions animate-fade-in-up" style="animation-delay: 0.5s;">
            <%= f.submit "Sign in", class: "login-button" %>
          </div>
        <% end %>

        <div class="additional-links animate-fade-in-up" style="animation-delay: 0.6s;">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-password" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-link" %>
        </div>
      </div>

      <div class="info-section">
        <div class="welcome-back animate-fade-in-up" style="animation-delay: 0.7s;">
          <h3>Welcome Back to FairShare</h3>
          <p>We're excited to see you again! Log in to access your groups, track expenses, and settle up with friends.</p>
        </div>

        <div class="features-section animate-fade-in-up" style="animation-delay: 0.8s;">
          <h3>What's New in FairShare?</h3>
          <ul>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" class="feature-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              Faster expense splitting
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" class="feature-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Improved financial insights
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" class="feature-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Real-time balance updates
            </li>
          </ul>
        </div>

        <div class="testimonial-section animate-fade-in-up" style="animation-delay: 0.9s;">
          <h3>What Our Users Say</h3>
          <div class="testimonial">
            <p>"FairShare has revolutionized how my friends and I handle group expenses. It's a game-changer!"</p>
            <p class="testimonial-author">- Alex M., San Francisco</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f3f4f6;
        padding: 20px;
    }

    .login-card {
        max-width: 1200px;
        width: 100%;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .login-content {
        display: flex;
        flex-direction: column;
    }

    .form-section, .info-section {
        padding: 40px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .login-header h2 {
        font-size: 28px;
        color: #4f46e5;
        margin-bottom: 10px;
    }

    .login-header p {
        color: #6b7280;
        font-size: 16px;
    }

    .login-form {
        margin-top: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #4b5563;
        font-size: 14px;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d5db;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .form-group input:focus {
        outline: none;
        border-color: #4f46e5;
        box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
    }

    .remember-me {
        display: flex;
        align-items: center;
    }

    .remember-me input[type="checkbox"] {
        margin-right: 5px;
    }

    .login-button {
        width: 100%;
        padding: 12px;
        background-color: #4f46e5;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .login-button:hover {
        background-color: #4338ca;
        transform: translateY(-2px);
    }

    .additional-links {
        margin-top: 20px;
        text-align: center;
    }

    .additional-links a {
        color: #4f46e5;
        text-decoration: none;
        font-size: 14px;
        transition: all 0.3s ease;
        margin: 0 10px;
    }

    .additional-links a:hover {
        text-decoration: underline;
    }

    .welcome-back, .features-section, .testimonial-section {
        margin-bottom: 30px;
    }

    .welcome-back h3, .features-section h3, .testimonial-section h3 {
        font-size: 18px;
        color: #4f46e5;
        margin-bottom: 15px;
    }

    .features-section ul {
        list-style-type: none;
        padding: 0;
    }

    .features-section li {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        font-size: 14px;
        color: #4b5563;
    }

    .feature-icon {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        color: #4f46e5;
    }

    .testimonial {
        background-color: #f3f4f6;
        padding: 15px;
        border-radius: 5px;
        font-style: italic;
    }

    .testimonial-author {
        margin-top: 10px;
        text-align: right;
        font-weight: bold;
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (min-width: 768px) {
        .login-content {
            flex-direction: row;
        }

        .form-section, .info-section {
            width: 50%;
        }

        .form-section {
            border-right: 1px solid #e5e7eb;
        }
    }

    @media (max-width: 767px) {
        .login-card {
            box-shadow: none;
            border-radius: 0;
        }

        .form-section, .info-section {
            padding: 20px;
        }

        .login-header h2 {
            font-size: 24px;
        }

        .login-header p {
            font-size: 14px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const formGroups = document.querySelectorAll('.form-group');
        formGroups.forEach((group, index) => {
            group.style.animationDelay = `${0.2 + (index * 0.1)}s`;
        });
    });
</script>