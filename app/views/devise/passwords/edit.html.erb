<div class="password-change-container">
  <div class="password-change-card">
    <div class="password-change-content">
      <div class="form-section">
        <div class="password-change-header animate-fade-in-up">
          <h2>Change Your Password</h2>
          <p>Choose a strong, unique password for your account</p>
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "password-change-form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group animate-fade-in-up" style="animation-delay: 0.2s;">
            <%= f.label :password, "New password" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password (#{@minimum_password_length} characters minimum)" %>
          </div>

          <div class="form-group animate-fade-in-up" style="animation-delay: 0.3s;">
            <%= f.label :password_confirmation, "Confirm new password" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password" %>
          </div>

          <div class="form-actions animate-fade-in-up" style="animation-delay: 0.4s;">
            <%= f.submit "Change my password", class: "password-change-button" %>
          </div>
        <% end %>

        <div class="additional-links animate-fade-in-up" style="animation-delay: 0.5s;">
          <%= render "devise/shared/links" %>
        </div>
      </div>

      <div class="info-section">
        <div class="password-tips animate-fade-in-up" style="animation-delay: 0.6s;">
          <h3>Password Security Tips</h3>
          <ul>
            <li>Use a mix of letters, numbers, and symbols</li>
            <li>Avoid using personal information</li>
            <li>Don't reuse passwords from other accounts</li>
            <li>Consider using a password manager</li>
          </ul>
        </div>

        <div class="security-reminder animate-fade-in-up" style="animation-delay: 0.7s;">
          <h3>Keep Your Account Secure</h3>
          <p>Regularly updating your password helps protect your FairShare account and financial information. We recommend changing your password every few months.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    /* Styles similar to login and registration pages */
    .password-change-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f3f4f6;
        padding: 20px;
    }

    .password-change-card {
        max-width: 1000px;
        width: 100%;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .password-change-content {
        display: flex;
        flex-direction: column;
    }

    .form-section, .info-section {
        padding: 40px;
    }

    .password-change-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .password-change-header h2 {
        font-size: 28px;
        color: #4f46e5;
        margin-bottom: 10px;
    }

    .password-change-header p {
        color: #6b7280;
        font-size: 16px;
    }

    .password-change-form {
        margin-top: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #4b5563;
        font-size: 14px;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d5db;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .form-group input:focus {
        outline: none;
        border-color: #4f46e5;
        box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
    }

    .password-change-button {
        width: 100%;
        padding: 12px;
        background-color: #4f46e5;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .password-change-button:hover {
        background-color: #4338ca;
        transform: translateY(-2px);
    }

    .additional-links {
        margin-top: 20px;
        text-align: center;
    }

    .additional-links a {
        color: #4f46e5;
        text-decoration: none;
        font-size: 14px;
        transition: all 0.3s ease;
        margin: 0 10px;
    }

    .additional-links a:hover {
        text-decoration: underline;
    }

    .password-tips, .security-reminder {
        margin-bottom: 30px;
    }

    .password-tips h3, .security-reminder h3 {
        font-size: 18px;
        color: #4f46e5;
        margin-bottom: 15px;
    }

    .password-tips ul {
        list-style-type: none;
        padding: 0;
    }

    .password-tips li {
        margin-bottom: 10px;
        font-size: 14px;
        color: #4b5563;
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (min-width: 768px) {
        .password-change-content {
            flex-direction: row;
        }

        .form-section, .info-section {
            width: 50%;
        }

        .form-section {
            border-right: 1px solid #e5e7eb;
        }
    }

    @media (max-width: 767px) {
        .password-change-card {
            box-shadow: none;
            border-radius: 0;
        }

        .form-section, .info-section {
            padding: 20px;
        }

        .password-change-header h2 {
            font-size: 24px;
        }

        .password-change-header p {
            font-size: 14px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const formGroups = document.querySelectorAll('.form-group');
        formGroups.forEach((group, index) => {
            group.style.animationDelay = `${0.2 + (index * 0.1)}s`;
        });
    });
</script>