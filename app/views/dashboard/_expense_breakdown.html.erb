<div class="card expense-breakdown">
  <h2 class="section-title">Expense Breakdown</h2>
  <div class="chart-container">
    <canvas id="expenseChart"></canvas>
  </div>
</div>

<style>
    .chart-container {
        height: 300px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var ctx = document.getElementById('expenseChart').getContext('2d');
        var expenseChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: <%= raw @expense_categories.keys.to_json %>,
                datasets: [{
                    data: <%= raw @expense_categories.values.to_json %>,
                    backgroundColor: [
                        '#4F46E5', '#818CF8', '#10B981', '#F59E0B', '#EF4444', '#6B7280'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: 'right',
                    labels: {
                        fontColor: '#1F2937'
                    }
                }
            }
        });
    });
</script>