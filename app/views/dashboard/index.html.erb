<!-- app/views/dashboard/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-2xl sm:text-3xl font-semibold text-gray-900 mb-8">Welcome, <%= current_user.first_name %></h1>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Balance -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-sm font-medium text-gray-500 mb-1">Total Balance</h2>
      <p class="text-2xl font-bold <%= @total_balance >= 0 ? 'text-green-600' : 'text-red-600' %>">
        <%= number_to_currency(@total_balance) %>
      </p>
    </div>

    <!-- Total Expenses -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-sm font-medium text-gray-500 mb-1">Total Expenses</h2>
      <p class="text-2xl font-bold text-gray-900">
        <%= number_to_currency(@expenses_by_month.values.sum) %>
      </p>
    </div>

    <!-- Number of Groups -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-sm font-medium text-gray-500 mb-1">Active Groups</h2>
      <p class="text-2xl font-bold text-gray-900"><%= @groups.count %></p>
    </div>

    <!-- Upcoming Expenses Count -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-sm font-medium text-gray-500 mb-1">Upcoming Expenses</h2>
      <p class="text-2xl font-bold text-gray-900"><%= @upcoming_expenses.count %></p>
    </div>
  </div>

  <!-- Quick Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-4 mb-8">
    <%= link_to new_group_expense_path(@groups.first), class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
      Add Expense
    <% end %>

    <%= link_to groups_path, class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path></svg>
      Settle Up
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Activities -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Recent Activities</h2>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @recent_activities.each do |activity| %>
          <li class="px-6 py-4 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate"><%= activity.description %></p>
                <p class="text-xs text-gray-500"><%= activity.user.full_name %> â€¢ <%= activity.group.name %></p>
              </div>
              <div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= number_to_currency(activity.amount) %>
                </span>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <%= link_to "View All", "#", class: "block w-full text-center px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50 transition duration-150 ease-in-out" %>
    </div>

    <!-- Expenses Chart -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Expenses Over Time</h2>
      <!-- Add a chart here using a JavaScript library like Chart.js -->
      <div class="h-64 bg-gray-100 rounded-md flex items-center justify-center">
        <p class="text-gray-500">Expenses Chart Placeholder</p>
      </div>
    </div>

    <!-- Top Expense Categories -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Top Expense Categories</h2>
      <ul class="space-y-3">
        <% @top_expense_categories.each do |category, amount| %>
          <li class="flex items-center">
            <div class="w-full bg-gray-200 rounded-full h-2.5 mr-2">
              <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= (amount / @top_expense_categories.values.max) * 100 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-700 w-24 text-right"><%= category %></span>
            <span class="text-sm text-gray-500 w-24 text-right"><%= number_to_currency(amount) %></span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Upcoming Expenses -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Upcoming Expenses</h2>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @upcoming_expenses.each do |expense| %>
          <li class="px-6 py-4 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex justify-between items-center">
              <div>
                <p class="text-sm font-medium text-gray-900"><%= expense.description %></p>
                <p class="text-xs text-gray-500"><%= expense.date.strftime("%B %d, %Y") %></p>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                <%= number_to_currency(expense.amount) %>
              </span>
            </div>
          </li>
        <% end %>
      </ul>
      <%= link_to "View All", "#", class: "block w-full text-center px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50 transition duration-150 ease-in-out" %>
    </div>
  </div>
</div>