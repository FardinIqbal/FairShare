<!-- app/views/dashboard/index.html.erb -->
<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-8">Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Your Groups</h2>
      <ul class="divide-y divide-gray-200">
        <% @groups.each do |group| %>
          <li class="py-4">
            <%= link_to group.name, group_path(group), class: "text-blue-600 hover:text-blue-800" %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Recent Expenses</h2>
      <ul class="divide-y divide-gray-200">
        <% @recent_expenses.each do |expense| %>
          <li class="py-4">
            <p class="font-medium"><%= expense.description %></p>
            <p class="text-gray-600"><%= number_to_currency(expense.amount) %> - <%= expense.date.strftime("%B %d, %Y") %></p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="mt-8 bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Financial Summary</h2>
    <p class="text-2xl font-bold">Total Owed: <%= number_to_currency(@total_owed) %></p>
  </div>
</div>