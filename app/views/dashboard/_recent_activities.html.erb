<!-- app/views/dashboard/_recent_activities.html.erb -->
<div class="card recent-activities">
  <h2 class="section-title">Recent Activities</h2>
  <ul class="activity-list">
    <% @recent_activities.each do |activity| %>
      <li class="activity-item">
        <div class="activity-date"><%= activity.created_at.strftime("%B %d, %Y") %></div>
        <div class="activity-description"><%= activity.description %></div>
        <div class="activity-group"><%= activity.group.name %> - <%= activity.user.full_name %></div>
      </li>
    <% end %>
  </ul>
</div>

<style>
    .activity-list {
        list-style-type: none;
        padding: 0;
    }

    .activity-item {
        border-left: 3px solid #4F46E5;
        padding-left: 15px;
        margin-bottom: 15px;
    }

    .activity-date {
        font-size: 12px;
        color: #6B7280;
    }

    .activity-description {
        font-weight: 500;
        color: #1F2937;
        margin: 5px 0;
    }

    .activity-group {
        font-size: 14px;
        color: #6B7280;
    }
</style>