<style>
    .summary-item {
        transition: all 0.6s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 0.75rem;
        border-radius: 0.5rem;
        width: 100%;
    }
    .summary-title {
        font-size: 0.75rem;
        font-weight: 500;
        color: #6B7280;
        text-align: center;
    }
    .summary-value {
        font-size: 1.25rem;
        font-weight: 700;
        transition: color 0.6s ease;
        text-align: center;
    }
    .summary-subtitle {
        font-size: 0.7rem;
        color: #6B7280;
        text-align: center;
    }
    @media (min-width: 320px) {
        .summary-item { width: 33.333%; }
        .summary-title { font-size: 0.875rem; }
        .summary-value { font-size: 1.5rem; }
        .summary-subtitle { font-size: 0.75rem; }
    }
</style>

<div class="bg-white rounded-lg shadow p-3 mb-4">
  <div style="display: flex; flex-wrap: wrap; justify-content: space-between; margin: -0.375rem;">
    <div class="summary-item"
         onmouseover="this.style.transform='scale(1.03)'; this.style.backgroundColor='#F3F4F6';"
         onmouseout="this.style.transform='scale(1)'; this.style.backgroundColor='transparent';"
    >
      <h2 class="summary-title">Balance</h2>
      <p class="summary-value" style="color: <%= @total_balance >= 0 ? '#059669' : '#DC2626' %>;">
        <%= number_to_currency(@total_balance.abs) %>
      </p>
      <p class="summary-subtitle">
        <%= @total_balance >= 0 ? 'you are owed' : 'you owe' %>
      </p>
    </div>

    <div class="summary-item"
         onmouseover="this.style.transform='scale(1.03)'; this.style.backgroundColor='#F3F4F6';"
         onmouseout="this.style.transform='scale(1)'; this.style.backgroundColor='transparent';"
    >
      <h2 class="summary-title">Total Expenses</h2>
      <p class="summary-value" style="color: #111827;">
        <%= number_to_currency(@total_expenses) %>
      </p>
      <p class="summary-subtitle">all groups</p>
    </div>

    <div class="summary-item"
         onmouseover="this.style.transform='scale(1.03)'; this.style.backgroundColor='#F3F4F6';"
         onmouseout="this.style.transform='scale(1)'; this.style.backgroundColor='transparent';"
    >
      <h2 class="summary-title">Active Groups</h2>
      <p class="summary-value" style="color: #111827;">
        <%= @groups.count %>
      </p>
      <p class="summary-subtitle">participating</p>
    </div>
  </div>
</div>
<!-- End of app/views/dashboard/_summary_section.html.erb -->