<!-- app/views/dashboard/_summary_card.html.erb -->
<div class="card summary-card">
  <h2 class="section-title">Summary</h2>
  <div class="summary-grid">
    <div class="summary-item">
      <p class="summary-label">Total Balance</p>
      <p class="summary-value <%= @total_balance >= 0 ? 'positive' : 'negative' %>">
        <%= number_to_currency(@total_balance.abs) %>
      </p>
      <p class="summary-subtext"><%= @total_balance >= 0 ? 'you are owed' : 'you owe' %></p>
    </div>
    <div class="summary-item">
      <p class="summary-label">Total Expenses</p>
      <p class="summary-value"><%= number_to_currency(@total_expenses) %></p>
      <p class="summary-subtext">all groups</p>
    </div>
    <div class="summary-item">
      <p class="summary-label">Active Groups</p>
      <p class="summary-value"><%= @groups.count %></p>
      <p class="summary-subtext">participating</p>
    </div>
  </div>
</div>

<style>
    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
    }

    .summary-item {
        text-align: center;
    }

    .summary-label {
        font-size: 14px;
        color: #6B7280;
        margin-bottom: 5px;
    }

    .summary-value {
        font-size: 24px;
        font-weight: 600;
        color: #1F2937;
    }

    .summary-value.positive {
        color: #10B981;
    }

    .summary-value.negative {
        color: #EF4444;
    }

    .summary-subtext {
        font-size: 12px;
        color: #6B7280;
    }
</style>