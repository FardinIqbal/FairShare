<div class="flex items-center">
  <% if activity.is_a?(Expense) %>
    <i class="fas fa-receipt text-blue-500 mr-3"></i>
    <div>
      <p class="font-semibold"><%= activity.description %></p>
      <p class="text-sm text-gray-500">
        <%= activity.user.full_name %> added an expense of <%= number_to_currency(activity.amount) %> in <%= activity.group.name %>
      </p>
    </div>
  <% elsif activity.is_a?(Settlement) %>
    <i class="fas fa-handshake text-green-500 mr-3"></i>
    <div>
      <p class="font-semibold">Settlement in <%= activity.group.name %></p>
      <p class="text-sm text-gray-500">
        <%= activity.payer.full_name %> paid <%= number_to_currency(activity.amount) %> to <%= activity.receiver.full_name %>
      </p>
    </div>
  <% end %>
  <span class="ml-auto text-sm text-gray-500"><%= time_ago_in_words(activity.created_at) %> ago</span>
</div>