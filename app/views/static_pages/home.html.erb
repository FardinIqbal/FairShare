<!-- app/views/static_pages/home.html.erb -->
<div class="bg-gradient-to-b from-indigo-50 to-white min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center mb-16 animate-fade-in-up">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl mb-4">
        Welcome to <span class="text-indigo-600 animate-color-pulse">FairShare</span>
      </h1>
      <p class="mt-3 max-w-md mx-auto text-xl text-gray-600 sm:text-2xl md:mt-5 md:max-w-3xl">
        Your go-to platform for easy expense sharing and group finance management.
      </p>
      <div class="mt-8 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
        <% if user_signed_in? %>
          <%= link_to 'View My Groups', groups_path, class: 'inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
        <% else %>
          <div class="rounded-md shadow">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
          </div>
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
            <%= link_to 'Log In', new_user_session_path, class: 'w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-24 animate-fade-in-up">
      <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-12">
        Why Choose FairShare?
      </h2>
      <div class="mt-10">
        <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
          <% [
               { title: "Easy Group Management", description: "Create and manage multiple groups for different occasions or shared living situations.", icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" },
               { title: "Effortless Expense Tracking", description: "Add and categorize expenses quickly, keeping a clear record of all shared costs.", icon: "M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" },
               { title: "Smart Balance Calculation", description: "Automatically calculate who owes what, eliminating the hassle of manual calculations.", icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" },
               { title: "Simplified Settlements", description: "Easily settle up with friends and keep track of who has paid their share.", icon: "M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" }
             ].each do |feature| %>
            <div class="relative p-6 bg-white rounded-lg shadow-md transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-lg">
              <dt>
                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
                  <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= feature[:icon] %>" />
                  </svg>
                </div>
                <p class="ml-16 text-lg leading-6 font-medium text-gray-900"><%= feature[:title] %></p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-500">
                <%= feature[:description] %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>

    <div class="mt-24 bg-white rounded-lg shadow-xl overflow-hidden lg:grid lg:grid-cols-2 lg:gap-4 animate-fade-in-up">
      <div class="pt-10 pb-12 px-6 sm:pt-16 sm:px-16 lg:py-16 lg:pr-0 xl:py-20 xl:px-20">
        <div class="lg:self-center">
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            <span class="block">Ready to get started?</span>
            <span class="block text-indigo-600">Join FairShare today.</span>
          </h2>
          <p class="mt-4 text-lg leading-6 text-gray-500">
            Sign up now and experience hassle-free expense sharing with your friends, roommates, or travel buddies.
          </p>
          <% unless user_signed_in? %>
            <a href="<%= new_user_registration_path %>" class="mt-8 bg-indigo-600 border border-transparent rounded-md shadow px-5 py-3 inline-flex items-center text-base font-medium text-white hover:bg-indigo-700 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Create your account
            </a>
          <% end %>
        </div>
      </div>
      <div class="relative -mt-6 aspect-w-5 aspect-h-3 md:aspect-w-2 md:aspect-h-1">
        <%= image_tag "valiant-made-UrzN-8K1PCE-unsplash.jpg", class: "transform translate-x-6 translate-y-6 rounded-md object-cover object-left-top sm:translate-x-16 lg:translate-y-20 transition duration-700 ease-in-out hover:scale-105", alt: "People collaborating on finances" %>
      </div>
    </div>
  </div>
</div>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 1s ease-out;
    }

    .animate-color-pulse {
        animation: colorPulse 4s infinite;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes colorPulse {
        0%, 100% {
            color: #4f46e5;
        }
        50% {
            color: #818cf8;
        }
    }
</style>