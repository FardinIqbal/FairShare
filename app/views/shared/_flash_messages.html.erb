<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
  <% flash.each do |type, message| %>
    <div class="rounded-md <%= type == 'alert' ? 'bg-red-50 dark:bg-red-900' : 'bg-green-50 dark:bg-green-900' %> p-4 mb-4 transition-all duration-300 ease-in-out transform hover:scale-105">
      <div class="flex">
        <div class="flex-shrink-0">
          <% if type == 'alert' %>
            <svg class="h-5 w-5 text-red-400 dark:text-red-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-green-400 dark:text-green-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium <%= type == 'alert' ? 'text-red-800 dark:text-red-200' : 'text-green-800 dark:text-green-200' %>">
            <%= message %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>