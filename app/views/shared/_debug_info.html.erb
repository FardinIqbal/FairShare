<!-- app/views/shared/_debug_info.html.erb -->
<% if Rails.env.development? %>
  <div class="bg-gray-100 p-4 mt-8 rounded-lg">
    <h2 class="text-lg font-bold mb-2">Debug Information</h2>
    <pre class="text-sm overflow-x-auto">
User ID: <%= current_user.id %>
      Total Balance: <%= @total_balance.inspect %>
      Total Expenses: <%= @total_expenses.inspect %>
      Groups: <%= @groups.pluck(:id, :name).inspect %>

      Group Details:
      <% @groups.each do |group| %>
Group ID: <%= group.id %>
        Expenses: <%= group.expenses.pluck(:id, :amount).inspect %>
        Splits: <%= group.calculate_splits.inspect %>
<% end %>

      Owed by others: <%= @owed_by_others.inspect %>
      Owed to others: <%= @owed_to_others.inspect %>
    </pre>
  </div>
<% end %>