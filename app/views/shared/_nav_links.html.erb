<% if user_signed_in? %>
  <%= link_to "Dashboard", dashboard_path, data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w-full text-left' if local_assigns[:mobile]}" %>
  <%= link_to "Groups", groups_path, data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w-full text-left' if local_assigns[:mobile]}" %>
  <%= link_to "Profile", edit_user_registration_path, data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w/full text-left' if local_assigns[:mobile]}" %>
  <%= link_to "Pay", "#", data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w/full text-left' if local_assigns[:mobile]}" %>
  <%= link_to "Add Expense", "#", data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w/full text-left' if local_assigns[:mobile]}" %>
  <%= link_to "Notifications", "#", data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w/full text-left' if local_assigns[:mobile]}" %>
  <%= button_to "Log Out", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w/full text-left' if local_assigns[:mobile]}" %>
<% else %>
  <%= link_to "Sign Up", new_user_registration_path, data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w/full text-left' if local_assigns[:mobile]}" %>
  <%= link_to "Log In", new_user_session_path, data: { turbo: false }, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{'block w/full text-left' if local_assigns[:mobile]}" %>
<% end %>
