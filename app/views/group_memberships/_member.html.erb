<div class="gmm-member-item" data-member-id="<%= member.id %>" data-name="<%= member.full_name.downcase %>" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; border-bottom: 1px solid #e2e8f0; transition: all 0.3s ease;">
  <div style="flex: 1;">
    <p style="font-weight: 500; color: #1a202c; font-size: 1rem;"><%= member.full_name %></p>
    <p style="font-size: 0.875rem; color: #4b5563;"><%= member.email %></p>
  </div>
  <div>
    <% if member == current_user %>
      <span style="font-size: 0.875rem; color: #4b5563;">You</span>
    <% elsif member == group.leader %>
      <span style="font-size: 0.875rem; color: #4b5563;">Leader</span>
    <% else %>
      <%= button_to "Remove", group_group_membership_path(group, member), method: :delete, remote: true, class: "gmm-action-btn gmm-remove-btn", style: "background-color: #EF4444; color: white; font-weight: 500; padding: 0.5rem 1rem; border-radius: 0.375rem; border: none; cursor: pointer; transition: all 0.3s ease;" %>
    <% end %>
  </div>
</div>