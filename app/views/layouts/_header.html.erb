<header style="background-color: white; box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06); position: sticky; top: 0; z-index: 1000;">
  <nav style="max-width: 1280px; margin: 0 auto; padding: 0.75rem 1rem;">
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <%= link_to "FairShare", root_path, style: "color: #4f46e5; font-size: 1.25rem; font-weight: bold; text-decoration: none;" %>

      <div style="display: flex; align-items: center;">
        <div style="display: flex; @media (max-width: 768px) { display: none; }">
          <%= link_to "Home", root_path, class: "nav-link", style: "margin-right: 1.5rem; font-size: 1rem; color: #6b7280; text-decoration: none; transition: all 0.3s ease; position: relative;" %>
          <%= link_to "Groups", groups_path, class: "nav-link", style: "margin-right: 1.5rem; font-size: 1rem; color: #6b7280; text-decoration: none; transition: all 0.3s ease; position: relative;" %>
          <%= link_to "Activity", "#", class: "nav-link", style: "font-size: 1rem; color: #6b7280; text-decoration: none; transition: all 0.3s ease; position: relative;" %>
        </div>

        <div style="margin-left: 1.5rem;">
          <% if user_signed_in? %>
            <%= render 'layouts/user_menu' %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "btn-primary", style: "display: inline-block; background-color: #4f46e5; color: white; padding: 0.5rem 1rem; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 500; text-decoration: none;" %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn-secondary", style: "display: inline-block; background-color: white; color: #4f46e5; padding: 0.5rem 1rem; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 500; text-decoration: none; border: 1px solid #4f46e5;" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div style="background: linear-gradient(to right, #4f46e5, #6366f1); padding: 0.5rem; display: none; @media (max-width: 768px) { display: flex; justify-content: center; }">
    <%= link_to "Home", root_path, class: "mobile-nav-link", style: "color: white; text-decoration: none; padding: 0.25rem 0.75rem; border-radius: 9999px; transition: all 0.3s ease; margin: 0 0.25rem; font-size: 0.875rem;" %>
    <%= link_to "Groups", groups_path, class: "mobile-nav-link", style: "color: white; text-decoration: none; padding: 0.25rem 0.75rem; border-radius: 9999px; transition: all 0.3s ease; margin: 0 0.25rem; font-size: 0.875rem;" %>
    <%= link_to "Activity", "#", class: "mobile-nav-link", style: "color: white; text-decoration: none; padding: 0.25rem 0.75rem; border-radius: 9999px; transition: all 0.3s ease; margin: 0 0.25rem; font-size: 0.875rem;" %>
  </div>
</header>

<style>
    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background-color: #4f46e5;
        transition: width 0.3s ease;
    }
    .nav-link:hover {
        color: #4f46e5;
    }
    .nav-link:hover::after {
        width: 100%;
    }
    .btn-primary:hover {
        background-color: #4338ca;
    }
    .btn-secondary:hover {
        background-color: #4f46e5;
        color: white;
    }
    .mobile-nav-link:hover {
        background-color: rgba(255, 255, 255, 0.2);
    }
</style>