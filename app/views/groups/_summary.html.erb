<!-- app/views/groups/_summary.html.erb -->
<div class="bg-white rounded-lg shadow-lg p-6 border border-indigo-300 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-xl">
  <h3 class="text-2xl font-semibold text-indigo-700 mb-4">My Summary</h3>
  <div class="space-y-3">
    <div class="flex justify-between items-center">
      <span class="text-gray-600">Total Expenses:</span>
      <span class="font-semibold text-indigo-900"><%= number_to_currency(total_expenses) %></span>
    </div>
    <div class="flex justify-between items-center">
      <span class="text-gray-600">Your Share:</span>
      <span class="font-semibold text-indigo-900"><%= number_to_currency(per_person_share) %></span>
    </div>
    <div class="flex justify-between items-center">
      <span class="text-gray-600">Your Total Paid:</span>
      <span class="font-semibold text-indigo-900"><%= number_to_currency(current_user_summary[:total_paid]) %></span>
    </div>
    <div class="flex justify-between items-center pt-2 border-t border-indigo-200">
      <span class="text-gray-600">Your Net Balance:</span>
      <span class="font-bold <%= current_user_summary[:net_balance] >= 0 ? 'text-green-600' : 'text-red-600' %>">
        <%= number_to_currency(current_user_summary[:net_balance]) %>
        (<%= current_user_summary[:net_balance] >= 0 ? 'to receive' : 'to pay' %>)
      </span>
    </div>
  </div>
</div>