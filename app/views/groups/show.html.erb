<!-- app/views/groups/show.html.erb -->

<div class="container mx-auto mt-8 space-y-8 px-4">
  <h1 class="text-4xl font-bold mb-6 text-gray-800"><%= @group.name %></h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- My Summary section -->
    <div class="bg-white rounded-lg shadow-lg p-6 border border-indigo-300 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-xl">
      <h3 class="text-2xl font-semibold text-indigo-700 mb-4">My Summary</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Total Expenses:</span>
          <span class="font-semibold text-indigo-900"><%= number_to_currency(@total_expenses) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Your Share:</span>
          <span class="font-semibold text-indigo-900"><%= number_to_currency(@per_person_share) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Your Total Paid:</span>
          <span class="font-semibold text-indigo-900"><%= number_to_currency(@current_user_summary[:total_paid]) %></span>
        </div>
        <div class="flex justify-between items-center pt-2 border-t border-indigo-200">
          <span class="text-gray-600">Your Net Balance:</span>
          <span class="font-bold <%= @current_user_summary[:net_balance] >= 0 ? 'text-green-600' : 'text-red-600' %>">
          <%= number_to_currency(@current_user_summary[:net_balance]) %>
            (<%= @current_user_summary[:net_balance] >= 0 ? 'to receive' : 'to pay' %>)
        </span>
        </div>
      </div>
    </div>

    <!-- Members section -->
    <div class="bg-white rounded-lg shadow-lg p-6 border border-indigo-300 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-xl">
      <h2 class="text-2xl font-semibold text-indigo-700 mb-4">Members</h2>
      <ul class="divide-y divide-indigo-200">
        <% @group.users.each do |user| %>
          <li class="py-3 flex items-center">
            <% if user == @group.leader %>
              <!-- Crown Icon -->
              <svg class="mr-2 w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3 7h7l-5 4 2 7-6-4-6 4 2-7-5-4h7l3-7z"></path>
              </svg>
            <% end %>
            <span class="text-indigo-900 font-medium"><%= user.full_name %></span>
            <span class="ml-2 text-sm text-gray-500">(<%= user.email %>)</span>
          </li>
        <% end %>
      </ul>
      <%= link_to 'Add Users', add_users_group_path(@group), class: "mt-4 inline-block bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600 transition duration-200" %>
    </div>
  </div>



  <!-- Expenses section -->
  <div class="bg-white rounded-lg shadow-lg p-6 border border-indigo-300 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-xl">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-semibold text-indigo-700">Expenses</h2>
      <%= link_to 'Add New Expense', new_group_expense_path(@group), class: "bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600 transition duration-200" %>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
        <tr class="bg-gray-100">
          <th class="p-2 text-left text-indigo-700">Description</th>
          <th class="p-2 text-right text-indigo-700">Amount</th>
          <th class="p-2 text-right text-indigo-700">Paid By</th>
          <th class="p-2 text-right text-indigo-700">Date</th>
        </tr>
        </thead>
        <tbody>
        <% @expenses.each do |expense| %>
          <tr class="bg-indigo-50 border-t border-indigo-200 transition duration-300 ease-in-out hover:bg-indigo-100 hover:shadow-md">
            <td class="p-2"><%= expense.description %></td>
            <td class="p-2 text-right"><%= number_to_currency(expense.amount) %></td>
            <td class="p-2 text-right"><%= expense.user.full_name %></td>
            <td class="p-2 text-right"><%= expense.date.strftime("%b %d, %Y") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Group Balance section -->
  <div class="space-y-6">
    <h2 class="text-2xl font-bold text-gray-800">Group Balance</h2>

    <% if @current_user_owes.any? %>
      <div class="bg-red-50 p-4 rounded-lg border border-red-200">
        <h3 class="text-xl font-semibold text-red-800 mb-2">You Owe</h3>
        <% @current_user_owes.each do |debt| %>
          <div class="flex items-center justify-between text-red-700 mb-2">
            <span><%= debt[:to].full_name %>: <%= number_to_currency(debt[:amount]) %></span>
            <%= button_to 'Pay', '#', method: :get, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded transition duration-200" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @current_user_owed.any? %>
      <div class="bg-green-50 p-4 rounded-lg border border-green-200">
        <h3 class="text-xl font-semibold text-green-800 mb-2">You are Owed</h3>
        <% @current_user_owed.each do |credit| %>
          <div class="flex items-center justify-between text-green-700 mb-2">
            <span><%= credit[:from].full_name %> owes you: <%= number_to_currency(credit[:amount]) %></span>
            <%= button_to 'Remind', '#', method: :get, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-1 px-3 rounded transition duration-200" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% unless @current_user_owes.any? || @current_user_owed.any? %>
      <div class="bg-blue-50 p-4 rounded-lg border border-blue-200">
        <h3 class="text-xl font-semibold text-blue-800 mb-2">All Settled</h3>
        <p class="text-blue-700">You are all settled up! You neither owe anyone nor are owed any money.</p>
      </div>
    <% end %>
  </div>




  <!-- Expense Summary table -->
    <div class="bg-white p-4 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Expense Summary</h3>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
          <tr class="bg-gray-100">
            <th class="p-2 text-left">User</th>
            <th class="p-2 text-right">Total Paid</th>
            <th class="p-2 text-right">Expense Count</th>
            <th class="p-2 text-right">Largest Expense</th>
            <th class="p-2 text-right">Net Balance</th>
          </tr>
          </thead>
          <tbody>
          <% @user_summaries.each do |summary| %>
            <tr class="bg-indigo-50 border-t border-indigo-200 transition duration-300 ease-in-out hover:bg-indigo-100 hover:shadow-md">
              <td class="p-2"><%= summary[:user].full_name %></td>
              <td class="p-2 text-right"><%= number_to_currency(summary[:total_paid]) %></td>
              <td class="p-2 text-right"><%= summary[:expense_count] %></td>
              <td class="p-2 text-right"><%= number_to_currency(summary[:largest_expense]) %></td>
              <td class="p-2 text-right <%= summary[:net_balance] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= number_to_currency(summary[:net_balance]) %>
                (<%= summary[:net_balance] >= 0 ? 'to receive' : 'to pay' %>)
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Settle Up section -->
    <div class="bg-blue-50 p-6 rounded-lg shadow-md border border-blue-200">
      <h3 class="text-2xl font-semibold text-blue-800 mb-4">Settle Up</h3>
      <p class="text-blue-700 mb-6">Optimized settlement (least number of transactions):</p>

      <div class="space-y-4">
        <% @optimized_settlements.each do |settlement| %>
          <div class="flex items-center justify-between bg-white p-4 rounded-lg shadow-sm border border-blue-100 hover:shadow-md transition duration-300">
            <div class="flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 font-medium"><%= settlement[:from].full_name %> pays <%= settlement[:to].full_name %></span>
            </div>
            <span class="text-blue-600 font-bold text-lg"><%= number_to_currency(settlement[:amount]) %></span>
          </div>
        <% end %>
      </div>

      <div class="mt-6 text-center">
        <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300">
          Confirm Settlements
        </button>
      </div>
    </div>
  </div>
</div>