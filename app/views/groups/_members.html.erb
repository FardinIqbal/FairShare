<!-- app/views/groups/_members.html.erb -->
<div class="bg-white rounded-lg shadow-lg p-6 border border-indigo-300 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-xl">
  <h2 class="text-2xl font-semibold text-indigo-700 mb-4">Members</h2>
  <ul class="divide-y divide-indigo-200">
    <% group.users.each do |user| %>
      <li class="py-3 flex items-center">
        <% if user == group.leader %>
          <svg class="mr-2 w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3 7h7l-5 4 2 7-6-4-6 4 2-7-5-4h7l3-7z"></path>
          </svg>
        <% end %>
        <span class="text-indigo-900 font-medium"><%= user.full_name %></span>
        <span class="ml-2 text-sm text-gray-500">(<%= user.email %>)</span>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add Users', add_users_group_path(group), class: "mt-4 inline-block bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600 transition duration-200" %>
</div>