<div class="max-w-4xl mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-6 text-center">My Groups</h1>

  <%= link_to 'Create New Group', new_group_path, class: "inline-flex justify-center py-2 px-4 mb-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 block mx-auto" %>

  <div class="space-y-8">
    <% @groups.each do |group| %>
      <div style="background-color: #e0e7ff; border-radius: 0.375rem; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;" onmouseover="this.style.transform='translateY(-8px)'; this.style.boxShadow='0px 12px 24px #c7d2fe';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0px 4px 6px rgba(0, 0, 0, 0.1)';" class="p-6 border">
        <%= link_to group_path(group), style: "display: block; text-decoration: none; color: inherit;" do %>
          <h2 class="text-2xl font-bold mb-4 text-indigo-700">
            <%= group.name %>
          </h2>
          <p class="text-gray-600 mb-4">
            <%= group.description %>
          </p>
          <p class="text-xl font-semibold text-gray-800 mb-4">
            <strong>Total Expenses:</strong> $<%= group.expenses.sum(:amount) %>
          </p>
        <% end %>
        <div class="mt-6 flex justify-end space-x-2">
          <%= link_to 'Edit', edit_group_path(group), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= button_to 'Delete', group_path(group), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
