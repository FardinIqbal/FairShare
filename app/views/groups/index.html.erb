<!-- app/views/groups/index.html.erb -->
<div class="max-w-4xl mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-6">My Groups</h1>

  <%= link_to 'Create New Group', new_group_path, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mb-6" %>

  <div class="space-y-6">
    <% @groups.each do |group| %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h2 class="text-2xl font-bold">
            <%= link_to group.name, group_path(group), class: "text-indigo-600 hover:text-indigo-900" %>
          </h2>
          <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= group.description %></p>
        </div>
        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 space-x-2">
          <%= link_to 'Edit', edit_group_path(group), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= button_to 'Delete', group_path(group), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>