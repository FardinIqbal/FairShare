<!-- app/views/groups/add_users.html.erb -->
<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">Add Users to <%= @group.name %></h1>

  <% if @users.any? %>
    <ul class="divide-y divide-gray-200">
      <% @users.each do |user| %>
        <li class="py-4 flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-900"><%= user.full_name %></p>
            <p class="text-sm text-gray-500"><%= user.email %></p>
          </div>
          <%= button_to 'Add to Group', add_user_group_path(@group), params: { user_id: user.id }, method: :post, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500">No users available to add to this group.</p>
  <% end %>

  <%= link_to 'Back to Group', @group, class: "mt-4 inline-block bg-gray-200 hover:bg-gray-300 text-black font-bold py-2 px-4 rounded" %>
</div>